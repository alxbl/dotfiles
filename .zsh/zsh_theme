GEOMETRY_INFO=()

# PROMPT_GEOMETRY_COLORIZE_ROOT=true          # colorize root differently
# PROMPT_GEOMETRY_COLORIZE_SYMBOL=true        # colorize by hostname.
GEOMETRY_STATUS_SYMBOL_COLOR_HASH=true
