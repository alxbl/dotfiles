#!/bin/sh
export SHELL=zsh

ZSHCFG=~/.zsh
ZSH=$ZSHCFG/oh-my-zsh

#77;10102;0c TODO: Load from file
plugins=(archlinux django compleat git github ssh-agent mercurial pip python screen)
setopt completealiases

# Disable annoying auto-correct.
if [[ -f $ZSHCFG/zsh_nocomp ]]; then
    while read -r COMMAND; do
        alias $COMMAND="nocorrect $COMMAND"
    done < "$ZSHCFG/zsh_nocomp"
fi

# Load aliases
if [[ -f $ZSHCFG/aliases ]]; then
    source $ZSHCFG/aliases
fi

source $ZSH/oh-my-zsh.sh
if [[ -f $ZSHCFG/zsh_theme ]]; then
    source $ZSHCFG/zsh_theme
fi

# Load up colors
if [[ -f "$HOME/.xresources.d/dircolors" ]]; then
    eval `dircolors $HOME/.xresources.d/dircolors`
fi

# Useful exports
export EDITOR=emacs
export LANG="en_US.UTF-8"
export LC_ALL="en_US.UTF-8"
export TERM=xterm-256color # Not supposed to do that, but whatever, man.

# PATH
export GEM_HOME=~/.gem/ruby/2.0.0
export LOCAL_BIN=~/.bin
export PATH=$LOCAL_BIN:$PATH:$GEM_HOME/bin
