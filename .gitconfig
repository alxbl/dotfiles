[color]
    status = always
    diff = auto
    interactive = auto
    branch = auto

[alias]
    st = status
    co = checkout
    com = commit

[log]
    date = local

[commit]
    gpgsign = true

[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true

[push]
    default = simple

[pull]
	ff = only

[init]
	defaultBranch = main
